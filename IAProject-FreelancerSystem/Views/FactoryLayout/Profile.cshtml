
@{
    ViewBag.Title = "Profile";
    var user = ViewData["User"] as IAProject_FreelancerSystem.Models.User;

    var script1 = "https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js";
    var script2 = "https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js";
    var script3 = "https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js";

}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <link rel="stylesheet" href="style.css">

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>"PostsPage"</title>

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/FactoryLayout/Profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/FactoryLayout/CreateNewPost">Create New Post</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/FactoryLayout/MyPosts">My Posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/FactoryLayout/ReceivedProposals">Recived Proposals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/FactoryLayout/Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="bg py-5">
        <section class="container">
            <div class=" body-content profile_header row align-items-center my-5 justify-content-center mt-3">
                <div class="col-md-3 col-12">
                    <img src="@user.userPhoto" width="100%" />
                </div>
                <div class="col-md-3 col-12 mt-4">
                    <h3 style="font-weight: 700; ">@user.fName  @user.lName<p>@@ @user.userName</p></h3>
                    <hr>
                    <div class="d-flex align-items-center mt-2">
                        <div><i class="far fa-envelope"></i></div>
                        <p class="m-0">@user.email</p>
                    </div>
                    <div class="d-flex align-items-center mt-2">
                        <div><i class="fas fa-phone"></i></div>
                        <p class="m-0">@user.phoneNum</p>
                    </div>
                </div>
            </div>
        </section>
    </div>



    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            @using (Html.BeginForm("UpdateAdmin", "FactoryLayout", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input style="display: none" type="text" name="userID" value="@user.userID" />
                <input style="display: none" type="text" name="role" value="client" />

                <h5>Edit your profile information</h5>
                <div class=" mt-4">
                    <label for="validationCustom01" class="form-label">First name</label>
                    <input type="text" class="form-control" id="validationCustom01" name="fName" value="@user.fName" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class=" mt-2">
                    <label for="validationCustom02" class="form-label">Last name</label>
                    <input type="text" class="form-control" id="validationCustom02" name="lName" value="@user.lName" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class=" mt-2">
                    <label for="validationCustom02" class="form-label">User name</label>
                    <input type="text" class="form-control" id="validationCustom02" name="userName" value="@user.userName" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class=" mt-2">
                    <label for="validationCustom02" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" name="email" value="@user.email">
                </div>

                <div class=" mt-2">
                    <label for="validationCustom02" class="form-label">Phone number</label>
                    <input type="text" class="form-control" id="validationCustom02" name="phoneNum" value="@user.phoneNum" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mt-2">
                    <label for="formFile" class="form-label">Update your profile pic</label>
                    <input class="form-control" type="file" id="formFile" name="postedFile">
                </div>

                <div class="mb-3 mt-2">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="userPassword" value="@user.userPassword">
                </div>
                <button type="submit" class="btn btn-primary mt-2 col-12">Confirm edit</button>
            }
        </div>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    <script src="@script1"
            integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
            crossorigin="anonymous"></script>
    <script src="@script2"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
    <script src="@script3"
            integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
            crossorigin="anonymous"></script>

</body>
</html>