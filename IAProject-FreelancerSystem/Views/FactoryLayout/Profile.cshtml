
@{
    ViewBag.Title = "Profile";
    var user = ViewData["User"] as IAProject_FreelancerSystem.Models.User;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title = "PostsPage";</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FreeLance", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profile", "Profile", "FactoryLayout")</li>
                    <li>@Html.ActionLink("Create New Post", "CreateNewPost", "FactoryLayout")</li>
                    <li>@Html.ActionLink("My Posts", "MyPosts", "FactoryLayout")</li>
                    <li>@Html.ActionLink("Recived Proposals", "ReceivedProposals", "FactoryLayout")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <h2>Profile</h2>
        <h3>Image: @user.userPhoto</h3>
        <h3>Name: @user.fName  @user.lName</h3>
        <h3>User Name: @user.userName</h3>
        <h3>Email: @user.email</h3>
        <h3>Phone Number: @user.phoneNum</h3>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>